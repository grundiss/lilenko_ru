{
  "name": "lilenko.ru",
  "version": "1.0.0",
  "main": "index.js",
  "author": "grundiss <grundiss@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-client": "RENDER_MODE=BROWSER webpack --config webpack.config.js --display-chunks",
    "build-server": "RENDER_MODE=SERVER babel src --out-dir dist/ --source-maps inline",
    "build-watch":
      "rm -rf ./dist && NODE_ENV=development RENDER_MODE=BROWSER yarn build-client --watch --devtool=inline-source-map & NODE_ENV=development RENDER_MODE=SERVER yarn build-server --delay 2.0 --watch",
    "start-watch":
      "NODE_ENV=development DEBUG=express:* RENDER_MODE=SERVER nodemon --inspect index.js --watch dist",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-css-modules-transform": "^1.3.1",
    "babel-plugin-inline-json-import": "^0.2.1",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "nodemon": "^1.14.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "1.9.2"
  },
  "lint-staged": {
    "*.{js,json,jsx}": ["prettier --write", "git add"]
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5"
  }
}
